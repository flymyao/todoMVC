<script id="TaskPopup" type="text/html">
    <div class="TaskPopup Popup">
        <div class="Popup-screen"/>
        <div class="Popup-con" tabindex="0">
            <div class="popup-modal modal-content">
                <div class="popup-header modal-header">
                    <div class="modal-title">Project Edit</div>
                </div>
                <div class="popup-body modal-body">
                    <div class="form-group c-ctl-group">
                        <input class="dx" name="name" type="text" class="form-control c-control" autofocus
                               placeholder="Project Name">
                    </div>
                    <div class="form-group c-ctl-group state-group">
                        <div class="check-label">Is Done:</div>
                        <input class="dx" name="done" type="checkbox"/>
                    </div>
                    <div class="form-group c-ctl-group">
                        <textarea name="description" class="form-control c-control dx" placeholder="Task Note"></textarea>
                    </div>
                </div>
                <div class="popup-footer modal-footer">
                    <button type="button" class="btn btn-secondary cancel" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary save">Save</button>
                </div>
            </div>
        </div>
    </div>
</script> 
