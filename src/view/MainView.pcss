@import "../pcss/utils.pcss";

.MainView{
    flex-grow: 1;
    display: flex;
    flex-direction: column;

    > header{
        border-bottom: 1px solid #ddd;

        .inner{
            flex-grow: 1;
            display: flex;
            justify-content: space-between;
        }

        .logo{
            display: flex;
            margin-top: 8px;
            margin-left: 16px;
            font-size: 24px;
            color: $txt-blue;
        }
        .user{
            display: flex;
            .dropdown-toggle{
                margin-left: 86px;
            }
        }
    }

    .MainView-frame{
        display: flex;
        flex: 1;
        .inner{
            flex-grow: 1;
            display: flex;
            flex-direction: row;
            .MainView-left{
                display: flex;
                width: 180px;
                border-right: 1px solid #CCC;
            }

            .MainView-content{
                flex-grow: 1;
                position: relative;
            }
        }


    }


}