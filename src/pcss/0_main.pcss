@import "utils.pcss";

html, body{
   height: 100%;
   color: $txt;
}

#appbody{
	position: absolute;
	top: 0px;
	bottom: 10px;
	left: 16px;
	right: 16px;
	min-width: 992px;
}

.clearfix:after { 
   content: "."; 
   visibility: hidden; 
   display: block; 
   height: 0; 
   clear: both;
}

/* --------- Common Elements --------- */
H3 {
	font-size: 24px;
	font-weight: 200;
	letter-spacing: .1em;
	color: $txt;
}
/* --------- /Common Elements --------- */


/* --------- Common Form --------- */
.form-control[disabled], fieldset[disabled] .form-control{
	border: none;
	background: $bkg-lighter;
}
.form-control, input, textarea {
	box-shadow: none;
}
textarea{
	max-width: 100%;
}
label, .label{
	font-size: 14px;
	font-weight: 300;
	letter-spacing: .1em;
	color: $txt-label;
	text-align: right;
}

.helper-text{
	font-size: 11px;
	color: $txt-lighter;
	margin-top: 4px;
}
.left-size{
	.form-group{
		label{
			margin-top: 4px;
		}
		.col-sm-9{
			margin-bottom: 8px;
		}
	}
}

.flex-parent{
	display: -webkit-box;
	.flex-child-1{
		-webkit-box-flex: 1;
		width: 0%;
		padding-right: 15px;
		padding-left: 15px;
	}
	.flex-child-2{
		-webkit-box-flex: 2;
		width: 0%;
		padding-right: 15px;
		padding-left: 15px;
	}
	.flex-child-3{
		-webkit-box-flex: 3;
		width: 0%;
		padding-right: 15px;
		padding-left: 15px;
		margin-left: 8px;
	}
	.flex-child-4{
		-webkit-box-flex: 4;
		width: 0%;
		padding-right: 15px;
		padding-left: 15px;
	}
	.flex-child-5{
		-webkit-box-flex: 5;
		width: 0%;
		padding-right: 15px;
		padding-left: 15px;
	}
	.flex-child-9{
		-webkit-box-flex: 9;
		width: 0%;
		padding-right: 15px;
		padding-left: 15px;
	}
}

.control-title{
    text-align: right;
}
/* --------- /Common Form --------- */

/* --------- right-side --------- */
.right-side{
	.btn-clear{
		margin-left: 8px;
	}
	.line{
		margin-left: 30px;
		margin-bottom: 10px;
		padding-left: 24px;
		.checkbox-inline, .radio-inline{
			font-size: 12px;
			text-align: left;
			width: 92px;
			height: 16px;
			padding-left: 0px;
			display: inline-block;
			input{
				top: -3px;
			}
		}
		label{
			color: $txt-lighter;
			margin-right: 12px;
			margin-left: 0px;
		}
	}
	.search-columns{
		margin-bottom: 16px;
	}
	.label{
		margin-bottom: 8px;
		display: block;
		text-align: left;
	}
}

/* --------- /right-side --------- */

/* --------- Common nav --------- */
.nav-tabs{
	li{
		cursor: pointer;
	}
}
/* --------- /Common nav --------- */
